<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopuna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/light_text_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_accent_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>



        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Shopuna.TextFieldLayout">
        <item name="boxStrokeColor">@color/light_accent_color</item>
        <item name="helperTextTextColor">@color/light_accent_color</item>
        <item name="hintTextColor">@color/light_accent_color</item>
    </style>
    <style name="Theme.Shopuna.BottomNavigationView">
        <item name="android:background">@color/light_bottom_navigation_view_color</item>
        <item name="itemIconTint">@color/light_icons_color</item>
        <item name="itemTextColor">@color/light_icons_color</item>
    </style>
    <style name="Theme.Shopuna.TextField">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:background">#0F212121</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.Shopuna.Launcher" parent="Theme.Shopuna">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
    <style name="Theme.Shopuna.Dialog">
        <item name="android:background">@drawable/light_dialog_background</item>
    </style>
    <style name="Theme.Shopuna.TextViewEmailUserProfile">
        <item name="android:textColor">@color/light_email_user_profile_color</item>
    </style>

</resources>